<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Doctor Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
  <link rel="stylesheet" href="/css/style.css" />
  <style>
    body {
      margin: 0;
      padding: 0;
      overflow-x: hidden;
      background-color: #f8f9fa;
    }

    .sidebar {
      height: 100vh;
      background-color: #1c1f22;
      color: white;
      padding: 20px;
      width: 250px;
    }

    .sidebar a {
      color: white;
      text-decoration: none;
      display: block;
      padding: 10px 15px;
      border-radius: 5px;
    }

    .sidebar a:hover,
    .sidebar .active-link {
      background-color: #343a40;
    }

    .sidebar h4 {
      font-size: 1.5rem;
      margin-bottom: 1rem;
    }

    .content {
      margin-left: 250px;
      padding: 20px;
      min-height: 100vh;
    }

    .table-container {
      background: #fff;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0,0,0,0.05);
    }

    .table th, .table td {
      vertical-align: middle;
    }

    .table th {
      background-color: #343a40;
      color: white;
    }

    .btn-primary {
      font-size: 0.875rem;
    }

    .header-title {
      font-weight: 600;
    }
  </style>
</head>
<body>
  <!-- Header and Sidebar -->
  <%- include('header1') %>
  <%- include('Doctersidebar') %>

  <!-- Main Content -->
  <div class="content">
    <h2 class="header-title mb-2">Welcome to the Doctors dashboard</h2>
    <p class="mb-4 text-muted">Here you can manage patients, appointments.</p>

    <div class="table-container">
      <h4 class="mb-3">All Patients</h4>
      <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle">
          <thead>
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>Age</th>
              <th>Contact</th>
              <th>Issue</th>
              <th>Gender</th>
              <th>Room</th>
              <th>Nurse</th>
              <th>Admitted</th>
              <th>discharge</th>
              <th>Status</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% patients.forEach(patient => { %>
              <tr>
                <td><%= patient.id %></td>
                <td><%= patient.name %></td>
                <td><%= patient.age %></td>
                <td><%= patient.contact %></td>
                <td><%= patient.issue %></td>
                <td><%= patient.gender %></td>
                <td><%= patient.room || '--'%></td>
                <td><%= patient.nurse %></td>
                <td><%= patient.admitted || '--'%></td>
                <td><%= patient.Discharge|| '--' %></td>
                <td><%= patient.status %></td>
                <td>
                  <a href="/doctor/add-medicine/<%= patient.id %>" class="btn btn-sm btn-primary">Add medicine</a>
                  <span class="text-success ms-1">&#10003;</span>
                </td>
                <td>
                  <a href="/medicine/list/<%= patient.id %>" class="btn btn-sm btn-primary">View medicine</a>
                  <span class="text-success ms-1">&#10003;</span>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

  <script>
  // When any submenu link is clicked, collapse the parent menu
  document.querySelectorAll('#patientsMenu .nav-link').forEach(function(link) {
    link.addEventListener('click', function () {
      var collapseElement = document.getElementById('patientsMenu');
      var bsCollapse = bootstrap.Collapse.getInstance(collapseElement);
      if (bsCollapse) {
        bsCollapse.hide();
      }
    });
  });
</script>



<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Role-Based Registration</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
      .glass-card {
        background: rgba(255, 255, 255, 0.25);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border-radius: 20px;
        box-shadow: 0 8px 32px rgba(31, 38, 135, 0.2);
        padding: 40px;
        border: 1px solid rgba(255, 255, 255, 0.2);
      }

      .form-label {
        font-weight: 600;
      }

      .form-control,
      .form-select {
        border-radius: 12px;
        border: none;
        padding: 10px 15px;
        background-color: rgba(242, 236, 236, 0.7);
      }

      .form-control:focus,
      .form-select:focus {
        box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
        border: 1px solid #0d6efd;
      }

      .role-section {
        display: none;
        padding: 20px;
        margin-top: 20px;
        background: rgba(255, 255, 255, 0.3);
        border-radius: 12px;
        animation: fadeIn 0.5s ease-in-out;
      }

      @keyframes fadeIn {
        from {
          opacity: 0;
          transform: translateY(-5px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
      #msg {
      text-align: center;
      color: #dc3545;
      margin-top: 15px;
    }
    </style>
  </head>
  <body>
    <%- include('header1') %>
    <%- include('Adminsidebar') %>

    <div class="content" style="margin-left: 250px; padding: 20px; margin-top: 100px;">
      <h1 class="mb-4" style="text-align: center;">Register New User</h1>

      <div class="glass-card">
        <form method="POST" action="/register">
          <div class="mb-3">
            <label class="form-label">Full Name</label>
            <input type="text" class="form-control" name="name" required />
          </div>

          <div class="mb-3">
            <label class="form-label">Email (Username)</label>
            <input type="email" class="form-control" name="email" required />
          </div>

          <div class="mb-3">
            <label class="form-label">Password</label>
            <input type="password" class="form-control" name="password" required />
          </div>

          <div class="mb-3">
            <label class="form-label">Select Role</label>
            <select class="form-select" id="role" name="role" onchange="toggleRoleFields()" required>
              <option value="">Choose role</option>
              <option value="admin">Admin</option>
              <option value="doctor">Doctor</option>
              <option value="RECEPTIONIST">Reception</option>
            </select>
          </div>

          <div class="mb-3">
            <label class="form-label">Gender</label>
            <input type="text" class="form-control" name="gender" required />
          </div>

          <div class="mb-3">
            <label class="form-label">Age</label>
            <input type="text" class="form-control" name="age" required />
          </div>
          <!-- Admin Section -->
          <div id="adminFields" class="role-section">
            <div class="mb-3">
              <label class="form-label">Admin Contact</label>
              <input type="text" class="form-control" name="admin_contact" />
            </div>
          </div>

          <!-- Doctor Section -->
          <div id="doctorFields" class="role-section">
            <div class="mb-3">
              <label class="form-label">Specialization</label>
              <select class="form-select" id="specialization" required>
              <option selected disabled>Choose specialization</option>
              <option class="form-control" name="doctor_specialization">Cardiologist</option>
              <option class="form-control" name="doctor_specialization">Neurologist</option>
              <option class="form-control" name="doctor_specialization">Pediatrician</option>
              <option class="form-control" name="doctor_specialization">Orthopedic</option>
              <option class="form-control" name="doctor_specialization">Dermatologist</option>
              <option class="form-control" name="doctor_specialization">General Practitioner</option>
              <option class="form-control" name="doctor_specialization">ENT Specialist</option>
              <option class="form-control" name="doctor_specialization">Gynecologist</option>
              <option class="form-control" name="doctor_specialization">Psychiatrist</option>
              <option class="form-control" name="doctor_specialization">Surgeon</option>
            </select>
            </div>
            <div class="mb-3">
              <label class="form-label">Doctor Contact</label>
              <input type="text" class="form-control" name="doctor_contact" />
            </div>
            <div class="mb-3">
              <label class="form-label">Experience (Years)</label>
              <input type="number" class="form-control" name="doctor_experience" />
            </div>
          </div>

          <!-- Reception Section -->
          <div id="receptionFields" class="role-section">
            <div class="mb-3">
              <label class="form-label">Reception Contact</label>
              <input type="text" class="form-control" name="reception_contact" />
            </div>
          </div>

          <div class="row mt-4">
            
            <div class="col-md-12 text-end">
              <button type="submit" class="btn btn-primary w-100" style="border-radius: 12px; font-weight: 600;">
                Register
              </button>
            </div>
          </div>
          <p id="msg"><%= typeof message !== 'undefined' ? message : '' %></p>
        </form>
      </div>
    </div>

    <script>
      function toggleRoleFields() {
        const role = document.getElementById("role").value;
        document.getElementById("adminFields").style.display = role === "admin" ? "block" : "none";
        document.getElementById("doctorFields").style.display = role === "doctor" ? "block" : "none";
        document.getElementById("receptionFields").style.display = role === "RECEPTIONIST" ? "block" : "none";
      }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>

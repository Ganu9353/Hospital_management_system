<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Bootstrap Sidebar Navigation</title>
  <!-- Bootstrap CSS -->
  <link 
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" 
    rel="stylesheet" 
    integrity="sha384-ENjdO4Dr2bkBIFxQpeoAIYgC6BfGQHtmlmG6y6YAlexx1Uk6hJrtkcbZ+3fX6pMF" 
    crossorigin="anonymous"
  />
  <!-- Bootstrap Icons -->
  <link 
    href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" 
    rel="stylesheet" 
  />
  <style>
    /* Sidebar Styles */
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background-color: #feffff;
      margin: 0;
      height: 100vh;
      overflow-x: hidden;
    }

    .sidebar {
  position: fixed;
      top: 80px;
      left: 0;
      width: 250px;
      height: calc(100vh - 80px);
      background: #14cbdc;
      overflow-y: auto;
      padding: 20px 16px;
}

    .sidebar .nav-link {
      display: flex;
      align-items: center;
      gap: 10px;
      color: #333;
      font-weight: 600;
      padding: 10px 12px;
      border-radius: 10px;
      transition: background-color 0.3s;
    }

    .sidebar .nav-link:hover,
    .sidebar .nav-link:focus {
      background: #e0f7fa;
      color: #0d6efd;
    }

    .sidebar .nav-link.active {
      background: linear-gradient(90deg, #5e72e4 0%, #825ee0 100%);
      color: white;
      box-shadow: 0 4px 12px rgb(94 114 228 / 0.4);
    }

    /* Collapse submenu */
    .sidebar .collapse {
      margin-top: 8px;
      margin-left: 24px;
      border-left: 2px solid #dee2e6;
      padding-left: 16px;
    }

    .sidebar .collapse .nav-link {
      font-weight: 500;
      font-size: 0.9rem;
      padding-left: 12px;
      color: #656d87;
      border-radius: 8px;
      margin-bottom: 4px;
    }

    .sidebar .collapse .nav-link:hover,
    .sidebar .collapse .nav-link:focus {
      background-color: #e9ecef;
      color: #5e72e4;
    }

    /* Scrollbar styling for sidebar */
    .sidebar::-webkit-scrollbar {
      width: 6px;
    }
    .sidebar::-webkit-scrollbar-thumb {
      background-color: rgba(94, 114, 228, 0.4);
      border-radius: 3px;
    }
    .sidebar::-webkit-scrollbar-track {
      background: transparent;
    }

    /* Icon styles */
    .bi {
      font-size: 1.2rem;
      line-height: 1;
      flex-shrink: 0;
    }

    /* Responsive adjustments */
    @media (max-width: 767.98px) {
      .sidebar {
        max-width: 100%;
        height: auto;
        border-right: none;
        margin-top: 0;
        padding: 16px 12px;
      }
    }
  </style>
</head>
<body>
  <nav class="sidebar" aria-label="Sidebar navigation">
  <div id="sidebarAccordion">
    <ul class="nav flex-column" role="menu">

        <li class="nav-item" role="none">
        <a class="nav-link active" href="#" role="menuitem" tabindex="0">
          <i class="bi bi-grid-fill" aria-hidden="true"></i>Admin Dashboard
        </a>
      </li>

      <!-- Doctors -->
      <li class="nav-item" role="none">
        <a 
          class="nav-link d-flex justify-content-between align-items-center"
          data-bs-toggle="collapse"
          href="#doctorsMenu"
          role="button"
          aria-expanded="false"
          aria-controls="doctorsMenu"
        >
          <span><i class="bi bi-person-badge-fill"></i> Doctors</span>
          <i class="bi bi-chevron-down small"></i>
        </a>
        <div class="collapse ps-3" id="doctorsMenu" data-bs-parent="#sidebarAccordion">
          <ul class="nav flex-column">
            <li class="nav-item"><a class="nav-link" href="">Add Doctor</a></li>
            <li class="nav-item"><a class="nav-link" href="/viewdoctor">View Doctors</a></li>
        </ul>
        </div>
      </li>

      <!-- Receptionist -->
      <li class="nav-item" role="none">
        <a 
          class="nav-link d-flex justify-content-between align-items-center"
          data-bs-toggle="collapse"
          href="#receptionistMenu"
          role="button"
          aria-expanded="false"
          aria-controls="receptionistMenu"
        >
          <span><i class="bi bi-person-lines-fill"></i> Receptionist</span>
          <i class="bi bi-chevron-down small"></i>
        </a>
        <div class="collapse ps-3" id="receptionistMenu" data-bs-parent="#sidebarAccordion">
          <ul class="nav flex-column">
            <li class="nav-item"><a class="nav-link" href="/register">Add Receptionist</a></li>
            <li class="nav-item"><a class="nav-link" href="/viewreception">View Receptionists</a></li>
          </ul>
        </div>
      </li>

    </ul>
  </div>
</nav>


  <!-- Bootstrap Bundle JS with Popper -->
  <script 
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" 
    integrity="sha384-QF0pm8bWgr7HXp+Wq+UPF9a8mwQRk91HtT9VG8JPLoyXJfPd9Vy9td1oLNw+dz/6" 
    crossorigin="anonymous"
  ></script>
  <script>
    // Collapse patients menu on submenu link click
    document.querySelectorAll('#patientsMenu .nav-link').forEach(function(link) {
      link.addEventListener('click', function () {
        const collapseElement = document.getElementById('patientsMenu');
        const bsCollapse = bootstrap.Collapse.getInstance(collapseElement);
        if (bsCollapse && collapseElement.classList.contains('show')) {
          bsCollapse.hide();
        }
      });
    });

    // Collapse appointments menu on submenu link click
    document.querySelectorAll('#appointmentsMenu .nav-link').forEach(function(link) {
      link.addEventListener('click', function () {
        const collapseElement = document.getElementById('appointmentsMenu');
        const bsCollapse = bootstrap.Collapse.getInstance(collapseElement);
        if (bsCollapse && collapseElement.classList.contains('show')) {
          bsCollapse.hide();
        }
      });
    });

    // Collapse doctors menu on submenu link click
    document.querySelectorAll('#doctorsMenu .nav-link').forEach(function(link) {
      link.addEventListener('click', function () {
        const collapseElement = document.getElementById('doctorsMenu');
        const bsCollapse = bootstrap.Collapse.getInstance(collapseElement);
        if (bsCollapse && collapseElement.classList.contains('show')) {
          bsCollapse.hide();
        }
      });
    });

    //Collapse doctors menu on submenu link click
    document.querySelectorAll('#adminMenu .nav-link').forEach(function(link) {
      link.addEventListener('click', function () {
        const collapseElement = document.getElementById('adminMenu');
        const bsCollapse = bootstrap.Collapse.getInstance(collapseElement);
        if (bsCollapse && collapseElement.classList.contains('show')) {
          bsCollapse.hide();
        }
      });
    });
  </script>
</body>
</html>

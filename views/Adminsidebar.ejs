<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Admin Sidebar Navigation</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet"/>

  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background-color: #e0f7fa;
      margin: 0;
      height: 100vh;
      overflow-x: hidden;
    }

    .sidebar {
      position: fixed;
      top: 80px;
      left: 0;
      width: 250px;
      height: calc(100vh - 80px);
      background: #007BA7;
      padding: 20px 16px;
      overflow-y: auto;
      box-shadow: 2px 0 8px rgba(0, 0, 0, 0.1);
      transition: all 0.3s ease;
    }

    .sidebar .nav-link {
      display: flex;
      align-items: center;
      gap: 10px;
      color: #ffffff;
      font-weight: 600;
      padding: 10px 12px;
      border-radius: 10px;
      transition: all 0.3s ease;
      position: relative;
    }

    .sidebar .nav-link:hover,
    .sidebar .nav-link:focus {
      background: #00acc1;
      color: #ffffff;
      transform: translateX(5px);
      box-shadow: 0 4px 10px rgba(0, 123, 167, 0.2);
    }

    .sidebar .nav-link.active {
      background: linear-gradient(90deg, #5e72e4 0%, #825ee0 100%);
      color: #ffffff;
      box-shadow: 0 4px 12px rgba(94, 114, 228, 0.4);
    }

    .sidebar .collapse {
      margin-top: 8px;
      margin-left: 16px;
      border-left: 2px solid rgba(255, 255, 255, 0.5);
      padding-left: 14px;
    }

    .sidebar .collapse .nav-link {
      font-weight: 500;
      font-size: 0.9rem;
      color: #e0f7fa;
      border-radius: 8px;
      padding: 6px 10px;
      transition: all 0.2s ease;
    }

    .sidebar .collapse .nav-link:hover {
      background: #00acc1;
      color: white;
      transform: translateX(4px);
    }

    .bi {
      font-size: 1.1rem;
      line-height: 1;
    }

    .sidebar::-webkit-scrollbar {
      width: 6px;
    }

    .sidebar::-webkit-scrollbar-thumb {
      background-color: rgba(255, 255, 255, 0.3);
      border-radius: 3px;
    }

    @media (max-width: 768px) {
      .sidebar {
        position: relative;
        height: auto;
        width: 100%;
        box-shadow: none;
        padding: 10px;
      }
    }
  </style>
</head>
<body>

<nav class="sidebar" aria-label="Sidebar navigation">
  <div id="sidebarAccordion">
    <ul class="nav flex-column" role="menu">

      <li class="nav-item" role="none">
        <a class="nav-link active" href="/Admindashboard" role="menuitem">
          <i class="bi bi-grid-fill"></i> Admin Dashboard
        </a>
      </li>

      <!-- Doctors -->
      <li class="nav-item">
        <a 
          class="nav-link d-flex justify-content-between align-items-center"
          data-bs-toggle="collapse"
          href="#doctorsMenu"
          role="button"
          aria-expanded="false"
          aria-controls="doctorsMenu"
        >
          <span><i class="bi bi-person-badge-fill"></i> Doctors</span>
          <i class="bi bi-chevron-down small"></i>
        </a>
        <div class="collapse" id="doctorsMenu" data-bs-parent="#sidebarAccordion">
          <ul class="nav flex-column">
            <li class="nav-item"><a class="nav-link" href="/register">Add Doctor</a></li>
            <li class="nav-item"><a class="nav-link" href="/viewdoctor">View Doctors</a></li>
          </ul>
        </div>
      </li>

      <!-- Receptionist -->
      <li class="nav-item">
        <a 
          class="nav-link d-flex justify-content-between align-items-center"
          data-bs-toggle="collapse"
          href="#receptionistMenu"
          role="button"
          aria-expanded="false"
          aria-controls="receptionistMenu"
        >
          <span><i class="bi bi-person-lines-fill"></i> Receptionist</span>
          <i class="bi bi-chevron-down small"></i>
        </a>
        <div class="collapse" id="receptionistMenu" data-bs-parent="#sidebarAccordion">
          <ul class="nav flex-column">
            <li class="nav-item"><a class="nav-link" href="/register">Add Receptionist</a></li>
            <li class="nav-item"><a class="nav-link" href="/viewreception">View Receptionists</a></li>
          </ul>
        </div>
      </li>

    </ul>
  </div>
</nav>

<!-- Bootstrap JS Bundle -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
  // Collapse each menu on submenu item click
  ['doctorsMenu', 'receptionistMenu'].forEach(menuId => {
    document.querySelectorAll(`#${menuId} .nav-link`).forEach(link => {
      link.addEventListener('click', function () {
        const collapseElement = document.getElementById(menuId);
        const bsCollapse = bootstrap.Collapse.getInstance(collapseElement);
        if (bsCollapse && collapseElement.classList.contains('show')) {
          bsCollapse.hide();
        }
      });
    });
  });
</script>

</body>
</html>

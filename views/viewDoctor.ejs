<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>View Doctors</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f0f8ff; /* light background color */
    }
    .card {
      box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
      border-radius: 10px;
      padding: 20px;
    }
    .card-header {
      background-color: #0056b3; /* darker blue for header */
      color: white;
      font-size: 1.5rem;
      font-weight: bold;
      text-align: center;
    }
    table {
      width: 100%;
    }
    th, td {
      text-align: left;
      padding: 10px;
    }
    th {
      background-color: #e9ecef; /* light gray for header */
    }
  </style>
</head>
<body>

<div class="container mt-5">
  <div class="card">
    <div class="card-header">
      View Doctors
    </div>
    <div class="card-body">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Doctor Name</th>
            <th>Specialization</th>
            <th>Phone</th>
            <th>Experience (Years)</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% doctors.forEach(doctor => { %>
          <tr>
            <td><%= doctor.name %></td>
            <td><%= doctor.specialization %></td>
            <td><%= doctor.contact %></td>
            <td><%= doctor.experience %></td>
            <td><%= doctor.status %></td>
            <td>
              <a href="/editDoctor?id=<%= doctor.id %>" class="btn btn-warning btn-sm">Edit</a>
              <a href="/deleteDoctor?id=<%= doctor.id %>" class="btn btn-danger btn-sm">Delete</a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

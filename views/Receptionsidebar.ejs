<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Bootstrap Sidebar Navigation</title>

  <!-- Bootstrap CSS -->
  <link 
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" 
    rel="stylesheet"
  />
  <!-- Bootstrap Icons -->
  <link 
    href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" 
    rel="stylesheet"
  />
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background-color: #feffff;
      margin: 0;
      height: 100vh;
      overflow-x: hidden;
    }

    .sidebar {
      width: 250px;
      height: 100vh;
      background: #14cbdc;
      overflow-y: auto;
      padding: 32px 24px;
      z-index: 1020;
    }

    .sidebar .nav-link {
      display: flex;
      align-items: center;
      gap: 12px;
      color: #344767;
      font-weight: 600;
      font-size: 1rem;
      padding: 12px 16px;
      border-radius: 12px;
      transition: all 0.3s ease-in-out;
    }

    .sidebar .nav-link:hover,
    .sidebar .nav-link:focus {
      background-color: #f3f4f6;
      color: #5e72e4;
      text-decoration: none;
      outline: none;
      transform: scale(1.03);
      box-shadow: 0 4px 12px rgba(94, 114, 228, 0.2);
    }

    .sidebar .nav-link.active {
      background: linear-gradient(90deg, #5e72e4 0%, #825ee0 100%);
      color: white;
      box-shadow: 0 4px 12px rgba(94, 114, 228, 0.4);
    }

    .sidebar .collapse {
      margin-top: 8px;
      margin-left: 24px;
      border-left: 2px solid #dee2e6;
      padding-left: 16px;
    }

    .sidebar .collapse .nav-link {
      font-weight: 500;
      font-size: 0.9rem;
      padding-left: 12px;
      color: #656d87;
      border-radius: 8px;
      margin-bottom: 4px;
      transition: all 0.3s ease-in-out;
    }

    .sidebar .collapse .nav-link:hover,
    .sidebar .collapse .nav-link:focus {
      background-color: #e9ecef;
      color: #5e72e4;
      transform: scale(1.02);
      box-shadow: 0 2px 8px rgba(94, 114, 228, 0.15);
    }

    .sidebar::-webkit-scrollbar {
      width: 6px;
    }

    .sidebar::-webkit-scrollbar-thumb {
      background-color: rgba(94, 114, 228, 0.4);
      border-radius: 3px;
    }

    .sidebar::-webkit-scrollbar-track {
      background: transparent;
    }

    .bi {
      font-size: 1.2rem;
      line-height: 1;
      flex-shrink: 0;
    }

    @media (max-width: 767.98px) {
      .sidebar {
        max-width: 100%;
        height: auto;
        border-right: none;
        margin-top: 0;
        padding: 16px 12px;
      }
    }
  </style>
</head>
<body>
  <nav class="sidebar" aria-label="Sidebar navigation">
  <ul class="nav flex-column accordion" id="sidebarAccordion" role="menu">
    <!-- Dashboard -->
    <li class="nav-item" role="none">
      <a class="nav-link active" href="/Receptiondashboard" role="menuitem">
        <i class="bi bi-grid-fill"></i> Reception Dashboard
      </a>
    </li>

    <!-- Room -->
    <li class="nav-item" role="none">
      <a 
        class="nav-link d-flex justify-content-between align-items-center"
        data-bs-toggle="collapse"
        href="#roomMenu"
        role="button"
        aria-expanded="false"
        aria-controls="roomMenu"
      >
        <span><i class="bi bi-door-closed"></i> Room</span>
        <i class="bi bi-chevron-down small"></i>
      </a>
      <div class="collapse" id="roomMenu" data-bs-parent="#sidebarAccordion">
        <ul class="nav flex-column">
          <li class="nav-item"><a class="nav-link" href="/room/add">Add Room</a></li>
          <li class="nav-item"><a class="nav-link" href="/room/list">View Rooms</a></li>
        </ul>
      </div>
    </li>

    <!-- Patient -->
    <li class="nav-item" role="none">
      <a 
        class="nav-link d-flex justify-content-between align-items-center"
        data-bs-toggle="collapse"
        href="#patientMenu"
        role="button"
        aria-expanded="false"
        aria-controls="patientMenu"
      >
        <span><i class="bi bi-person-fill"></i> Patient</span>
        <i class="bi bi-chevron-down small"></i>
      </a>
      <div class="collapse" id="patientMenu" data-bs-parent="#sidebarAccordion">
        <ul class="nav flex-column">
          <li class="nav-item"><a class="nav-link" href="/patient/add">Add Patient</a></li>
          <li class="nav-item"><a class="nav-link" href="/patient/list">View Patients</a></li>
          <li class="nav-item"><a class="nav-link" href="/patient/discharge">Discharge Patient</a></li>
        </ul>
      </div>
    </li>

    <!-- Nurse -->
    <li class="nav-item" role="none">
      <a 
        class="nav-link d-flex justify-content-between align-items-center"
        data-bs-toggle="collapse"
        href="#nurseMenu"
        role="button"
        aria-expanded="false"
        aria-controls="nurseMenu"
      >
        <span><i class="bi bi-person-badge-fill"></i> Nurse</span>
        <i class="bi bi-chevron-down small"></i>
      </a>
      <div class="collapse" id="nurseMenu" data-bs-parent="#sidebarAccordion">
        <ul class="nav flex-column">
          <li class="nav-item"><a class="nav-link" href="/nurse/add">Add Nurse</a></li>
          <li class="nav-item"><a class="nav-link" href="/nurse/list">View Nurses</a></li>
        </ul>
      </div>
    </li>

    <!-- Medicine -->
<li class="nav-item" role="none">
  <a 
    class="nav-link d-flex justify-content-between align-items-center"
    data-bs-toggle="collapse"
    href="#medicineMenu"
    role="button"
    aria-expanded="false"
    aria-controls="medicineMenu"
  >
    <span><i class="bi bi-capsule-pill"></i> Medicine</span>
    <i class="bi bi-chevron-down small"></i>
  </a>
  <div class="collapse" id="medicineMenu" data-bs-parent="#sidebarAccordion">
    <ul class="nav flex-column">
      <li class="nav-item"><a class="nav-link" href="/medicine/add">Add Medicine</a></li>
      <li class="nav-item"><a class="nav-link" href="/medicine/list">View Medicine</a></li>
    </ul>
  </div>
</li>
    <!-- Billing -->
    <li class="nav-item" role="none">
      <a 
        class="nav-link d-flex justify-content-between align-items-center"
        data-bs-toggle="collapse"
        href="#billingMenu"
        role="button"
        aria-expanded="false"
        aria-controls="billingMenu"
      >
        <span><i class="bi bi-currency-rupee"></i> Billing</span>
        <i class="bi bi-chevron-down small"></i>
      </a>
      <div class="collapse" id="billingMenu" data-bs-parent="#sidebarAccordion">
        <ul class="nav flex-column">
          <li class="nav-item"><a class="nav-link" href="/billing/generate">Generate Bill</a></li>
          <li class="nav-item"><a class="nav-link" href="/billing/list">View Bills</a></li>
          <li class="nav-item"><a class="nav-link" href="/billing/edit">Edit Bill</a></li>
        </ul>
      </div>
    </li>
  </ul>
</nav>


  <!-- Bootstrap Bundle JS with Popper -->
  <script 
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
  ></script>
</body>
</html>

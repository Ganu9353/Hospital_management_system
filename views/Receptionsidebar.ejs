<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Bootstrap Sidebar Navigation</title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-ENjdO4Dr2bkBIFxQpeoAIYgC6BfGQHtmlmG6y6YAlexx1Uk6hJrtkcbZ+3fX6pMF"
      crossorigin="anonymous"
    />
    <!-- Bootstrap Icons -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
      rel="stylesheet"
    />
    <style>
      .nav-link {
        font-weight: 600;
        color: #344767;
      }
      .nav-link:hover {
        color: #5e72e4;
        background-color: #f3f4f6;
      }
      .nav-link.active {
        background: linear-gradient(90deg, #5e72e4 0%, #825ee0 100%);
        color: white !important;
      }
    </style>
  </head>
  <body>
    <nav
      class="sidebar position-fixed"
      style="
        top: 105px;
        left: 0;
        height: calc(100vh - 105px);
        width: 280px;
        background: #14cbdc;
        padding: 32px 24px;
        overflow-y: auto;
      "
    >
      <ul class="nav flex-column" role="menu" id="sidebarAccordion">
        <li class="nav-item">
          <a class="nav-link active" href="/dashboard">
            <i class="bi bi-grid-fill"></i> Dashboard
          </a>
        </li>

        <!-- Appointments -->
        <li class="nav-item">
          <a
            class="nav-link d-flex justify-content-between align-items-center"
            data-bs-toggle="collapse"
            href="#appointmentsMenu"
            role="button"
            aria-expanded="false"
            aria-controls="appointmentsMenu"
          >
            <span><i class="bi bi-calendar-check"></i> Appointments</span>
            <i class="bi bi-chevron-down small"></i>
          </a>
          <div
            class="collapse"
            id="appointmentsMenu"
            data-bs-parent="#sidebarAccordion"
          >
            <ul class="nav flex-column ms-3">
              <li>
                <a class="nav-link" href="/appointment/add">Add Appointment</a>
              </li>
              <li>
                <a class="nav-link" href="/appointment/list"
                  >View Appointments</a
                >
              </li>
              <li>
                <a class="nav-link" href="/appointment/edit"
                  >Edit Appointment</a
                >
              </li>
              <li>
                <a class="nav-link" href="/appointment/cancel"
                  >Cancel Appointment</a
                >
              </li>
            </ul>
          </div>
        </li>

        <!-- Patients -->
        <li class="nav-item">
          <a
            class="nav-link d-flex justify-content-between align-items-center"
            data-bs-toggle="collapse"
            href="#patientsMenu"
            role="button"
            aria-expanded="false"
            aria-controls="patientsMenu"
          >
            <span><i class="bi bi-person-heart"></i> Patients</span>
            <i class="bi bi-chevron-down small"></i>
          </a>
          <div
            class="collapse"
            id="patientsMenu"
            data-bs-parent="#sidebarAccordion"
          >
            <ul class="nav flex-column ms-3">
              <li><a class="nav-link" href="/patient/add">Add Patient</a></li>
              <li>
                <a class="nav-link" href="/patient/list">View Patients</a>
              </li>
              <li><a class="nav-link" href="/patient/edit">Edit Patient</a></li>
              <li>
                <a class="nav-link" href="/patient/discharge"
                  >Discharge Patient</a
                >
              </li>
            </ul>
          </div>
        </li>

        <!-- Billing -->
        <li class="nav-item">
          <a
            class="nav-link d-flex justify-content-between align-items-center"
            data-bs-toggle="collapse"
            href="#billingMenu"
            role="button"
            aria-expanded="false"
            aria-controls="billingMenu"
          >
            <span><i class="bi bi-currency-rupee"></i> Billing</span>
            <i class="bi bi-chevron-down small"></i>
          </a>
          <div
            class="collapse"
            id="billingMenu"
            data-bs-parent="#sidebarAccordion"
          >
            <ul class="nav flex-column ms-3">
              <li>
                <a class="nav-link" href="/bill/generate">Generate Bill</a>
              </li>
              <li><a class="nav-link" href="/bill/list">View Bills</a></li>
              <li><a class="nav-link" href="/bill/edit">Edit Bill</a></li>
              <li><a class="nav-link" href="/bill/print">Print Bill</a></li>
            </ul>
          </div>
        </li>
      </ul>
    </nav>

    <!-- Bootstrap Bundle JS with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-QF0pm8bWgr7HXp+Wq+UPF9a8mwQRk91HtT9VG8JPLoyXJfPd9Vy9td1oLNw+dz/6"
      crossorigin="anonymous"
    ></script>
    <script>
      // Collapse patients menu on submenu link click
      document
        .querySelectorAll("#patientsMenu .nav-link")
        .forEach(function (link) {
          link.addEventListener("click", function () {
            const collapseElement = document.getElementById("patientsMenu");
            const bsCollapse = bootstrap.Collapse.getInstance(collapseElement);
            if (bsCollapse && collapseElement.classList.contains("show")) {
              bsCollapse.hide();
            }
          });
        });

      // Collapse appointments menu on submenu link click
      document
        .querySelectorAll("#appointmentsMenu .nav-link")
        .forEach(function (link) {
          link.addEventListener("click", function () {
            const collapseElement = document.getElementById("appointmentsMenu");
            const bsCollapse = bootstrap.Collapse.getInstance(collapseElement);
            if (bsCollapse && collapseElement.classList.contains("show")) {
              bsCollapse.hide();
            }
          });
        });

      // Collapse doctors menu on submenu link click
      document
        .querySelectorAll("#doctorsMenu .nav-link")
        .forEach(function (link) {
          link.addEventListener("click", function () {
            const collapseElement = document.getElementById("doctorsMenu");
            const bsCollapse = bootstrap.Collapse.getInstance(collapseElement);
            if (bsCollapse && collapseElement.classList.contains("show")) {
              bsCollapse.hide();
            }
          });
        });
    </script>
  </body>
</html>

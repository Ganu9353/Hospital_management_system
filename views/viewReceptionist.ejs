<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>View Reception</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f1fdf4;
    }
    .card {
      background: #fff;
      border-radius: 10px;
      margin-top: 50px;
      box-shadow: 0 0 15px rgba(0, 0, 0, 0.08);
      padding: 20px;
    }
    .card-header {
      background-color: royalblue;
      color: white;
      padding: 15px;
      border-radius: 8px 8px 0 0;
      font-size: 1.5rem;
      font-weight: bold;
      text-align: center;
    }
    th, td {
      padding: 12px 15px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }
    th {
      background-color: #e0e7ff;
    }
    .btn-group .btn {
      margin-right: 5px;
    }
  </style>
</head>
<body>

<div class="container">
  <div class="card">
    <div class="card-header">
      View Reception
    </div>
    <div class="card-body">
      <table class="table">
        <thead>
          <tr>
            <th>Reception Name</th>
            <th>Contact</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% receptionList.forEach(reception => { %>
          <tr>
            <td><%= reception.name %></td>
            <td><%= reception.contact %></td>
            <td><%= reception.status %></td>
            <td class="btn-group" role="group" aria-label="Actions">
              <a href="/editReception?id=<%= reception.id %>" class="btn btn-warning btn-sm">Edit</a>
              <a href="/deleteReception?id=<%= reception.id %>" class="btn btn-danger btn-sm">Delete</a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>View Reception</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    body {
      font-family: Arial, sans-serif;
      background: linear-gradient(to right, #e3f2fd, #f1fdf4);
    }

    .glass-card {
      background: rgba(255, 255, 255, 0.25);
      backdrop-filter: blur(12px);
      -webkit-backdrop-filter: blur(12px);
      border-radius: 20px;
      box-shadow: 0 8px 32px rgba(31, 38, 135, 0.2);
      padding: 40px;
      border: 1px solid rgba(255, 255, 255, 0.2);
      margin-top: 100px;
    }

    .card-header {
      background-color: #0d6efd;
      color: white;
      padding: 15px;
      border-radius: 15px 15px 0 0;
      font-size: 1.8rem;
      font-weight: bold;
      text-align: center;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
      background-color: rgba(255, 255, 255, 0.7);
      border-radius: 12px;
      overflow: hidden;
    }

    th, td {
      padding: 14px 16px;
      text-align: left;
      border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    }

    th {
      background-color: #d6e0ff;
      font-weight: bold;
    }

    tr:hover {
      background-color: rgba(0, 0, 0, 0.04);
    }

    .btn-group .btn {
      margin-right: 6px;
      border-radius: 8px;
    }

    .btn-sm {
      padding: 6px 12px;
      font-size: 0.85rem;
    }
  </style>
</head>
<body>
  <%- include('header1') %>
  <%- include('Adminsidebar') %>

  <div class="content" style="margin-left: 250px; padding: 20px;">
    <div class="glass-card">
      <div class="card-header" style="background-color: #0d6efd;">
        View Reception
      </div>
      <div class="card-body mt-4">
        <table class="table">
          <thead>
            <tr>
              <th>Reception Name</th>
              <th>Contact</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% receptionist.forEach(reception => { %>
              <tr>
                <td><%= reception.name %></td>
                <td><%= reception.contact %></td>
                <td><%= reception.status %></td>
                <td class="btn-group" role="group" aria-label="Actions">
                  <a href="/editReception?id=<%= reception.id %>" class="btn btn-warning btn-sm">Edit</a>
                  <a href="/deleteReception?id=<%= reception.id %>" class="btn btn-danger btn-sm">Delete</a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

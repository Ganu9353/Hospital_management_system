<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>View Reception</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

  <style>
    body {
      background-color: #f0f8ff;
      font-family: Arial, sans-serif;
      margin: 0;
      padding-top: 80px;
      padding-left: 250px;
    }

    .header-fixed {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 80px;
      background-color: #ffffff;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      z-index: 1030;
    }

    .sidebar-fixed {
      position: fixed;
      top: 80px;
      left: 0;
      width: 250px;
      height: calc(100vh - 80px);
      background-color: #ffffff;
      box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
      z-index: 1020;
    }

    .card {
      background-color: #ffffff;
      border-radius: 12px;
      padding: 20px;
      box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
    }

    .card-header {
      background-color: #005f73;
      color: white;
      font-size: 1.5rem;
      font-weight: bold;
      text-align: center;
      border-radius: 10px 10px 0 0;
      padding: 15px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
      background-color: #fefefe;
      border-radius: 10px;
      overflow: hidden;
    }

    th, td {
      padding: 14px 16px;
      text-align: left;
      border-bottom: 1px solid #e0e0e0;
    }

    th {
      background-color: #d6e0ff;
      font-weight: bold;
    }

    tr:hover {
      background-color: rgba(0, 0, 0, 0.04);
    }

    .btn-group .btn {
      margin-right: 6px;
      border-radius: 8px;
    }

    .btn-sm {
      padding: 6px 12px;
      font-size: 0.85rem;
    }
  </style>
</head>
<body>
  <!-- Fixed header and sidebar -->
  <div class="header-fixed">
    <%- include('header1') %>
  </div>

  <div class="sidebar-fixed">
    <%- include('Adminsidebar') %>
  </div>

  <!-- Main content -->
  <div class="container mt-4">
    <div class="card">
      <div class="card-header" style="background-color: #005f73;">View Reception</div>
      <div class="card-body mt-3">
        <table class="table">
          <thead>
            <tr>
              <th>Reception Name</th>
              <th>Contact</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% receptionist.forEach(reception => { %>
              <tr>
                <td><%= reception.name %></td>
                <td><%= reception.contact %></td>
                <td><%= reception.status %></td>
                <td class="btn-group" role="group" aria-label="Actions">
                  <a href="/editReception?id=<%= reception.id %>" class="btn btn-warning btn-sm">Edit</a>
                  <a href="/deleteReception?id=<%= reception.id %>" class="btn btn-danger btn-sm">Delete</a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

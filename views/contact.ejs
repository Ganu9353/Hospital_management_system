<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Contact Form #01</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background: #f8f9fa;
    }

    .contact-container {
      background: #fff;
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
      margin-top: 50px;
    }

    .contact-info1 {
      background: #0048ff;
      color: #fff;
      padding: 30px;
    }

    .contact-info h4 {
      margin-bottom: 30px;
    }

    .info-item {
      display: flex;
      align-items: start;
      margin-bottom: 20px;
    }

    .info-item i {
      font-size: 20px;
      margin-right: 15px;
      margin-top: 2px;
    }

    .form-control {
      border-radius: 0;
    }

    .btn-primary {
      border-radius: 4px;
      padding: 10px 20px;
    }
  </style>
  <!-- Font Awesome for icons -->
  <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</head>
<body>
  <%- include('header.ejs') %>
  <div class="container">
    <h3 class="text-center mt-5 mb-4">Contact Form</h3>
    <div class="row contact-container">
      <!-- Contact Form -->
      <div class="col-md-7 p-4">
        <h4 class="mb-4">Get in touch</h4>
        <form>
          <div class="row mb-3">
            <div class="col">
              <input type="text" class="form-control" placeholder="Name">
            </div>
            <div class="col">
              <input type="email" class="form-control" placeholder="Email">
            </div>
          </div>
          <div class="mb-3">
            <input type="text" class="form-control" placeholder="Subject">
          </div>
          <div class="mb-3">
            <textarea class="form-control" rows="5" placeholder="Message"></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Send Message</button>
        </form>
      </div>

      <!-- Contact Info -->
      <div class="col-md-5 contact-info1">
        <h4>Contact us</h4>
        <div class="info-item">
          <i class="fas fa-map-marker-alt"></i>
          <div>
            <strong>Address:</strong><br>
            198 West 21th Street, Suite 721 New York NY 10016
          </div>
        </div>
        <div class="info-item">
          <i class="fas fa-phone"></i>
          <div><strong>Phone:</strong> + 1235 2355 98</div>
        </div>
        <div class="info-item">
          <i class="fas fa-paper-plane"></i>
          <div><strong>Email:</strong> info@yoursite.com</div>
        </div>
        <div class="info-item">
          <i class="fas fa-globe"></i>
          <div><strong>Website:</strong> yoursite.com</div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Add Medicine</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f9fafd;
    }
    .form-container {
      max-width: 600px;
      margin: 60px auto;
      background-color: #fff;
      padding: 40px;
      border-radius: 12px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    .form-title {
      text-align: center;
      margin-bottom: 25px;
      font-weight: 600;
      color: #34495e;
    }
  </style>
</head>
<body>

  <div class="container">
    <div class="form-container">
      <h2 class="form-title">Add Medicine for Patient</h2>
      <form action="/add-medicine" method="POST">
        
        <!-- Patient Selection -->
        <div class="mb-3">
          <label for="patient_id" class="form-label">Select Patient</label>
          <select name="patient_id" id="patient_id" class="form-select" required>
            <option value="">-- Select Patient --</option>
            <% patients.forEach(p => { %>
              <option value="<%= p.patient_id %>">
                <%= p.patient_id %> - <%= p.patient_name %>
              </option>
            <% }) %>
          </select>
        </div>

        <!-- Medicine Name -->
        <div class="mb-3">
          <label for="medicine_name" class="form-label">Medicine Name</label>
          <input type="text" name="medicine_name" class="form-control" required>
        </div>

        <!-- Price (₹) -->
        <div class="mb-3">
          <label for="price_medicine" class="form-label">Price (₹)</label>
          <input type="number" name="price_medicine" step="1" min="0" class="form-control" required>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-success w-100">Add Medicine</button>
      </form> 
    </div>
  </div>

</body>
</html>

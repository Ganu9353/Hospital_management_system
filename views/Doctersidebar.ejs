<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Bootstrap Sidebar Navigation</title>
  <!-- Bootstrap CSS -->
  <link 
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" 
    rel="stylesheet" 
    integrity="sha384-ENjdO4Dr2bkBIFxQpeoAIYgC6BfGQHtmlmG6y6YAlexx1Uk6hJrtkcbZ+3fX6pMF" 
    crossorigin="anonymous"
  />
  <!-- Bootstrap Icons -->
  <link 
    href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" 
    rel="stylesheet" 
  />
  <style>
    /* Sidebar Styles */
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background-color: #feffff;
      margin: 0;
      height: 100vh;
      overflow-x: hidden;
    }

    .sidebar {
      width: 250px;
      height: 100vh;
      background: #14cbdc;
      overflow-y: auto;
      padding: 32px 24px;
      z-index: 1020;
    }

    .sidebar .nav-link {
      display: flex;
      align-items: center;
      gap: 12px;
      color: #344767;
      font-weight: 600;
      font-size: 1rem;
      padding: 12px 16px;
      border-radius: 12px;
      transition: background-color 0.3s ease, color 0.3s ease;
    }

    .sidebar .nav-link:hover,
    .sidebar .nav-link:focus {
      background-color: #f3f4f6;
      color: #5e72e4;
      text-decoration: none;
      outline: none;
    }

    .sidebar .nav-link.active {
      background: linear-gradient(90deg, #5e72e4 0%, #825ee0 100%);
      color: white;
      box-shadow: 0 4px 12px rgb(94 114 228 / 0.4);
    }

    /* Collapse submenu */
    .sidebar .collapse {
      margin-top: 8px;
      margin-left: 24px;
      border-left: 2px solid #dee2e6;
      padding-left: 16px;
    }

    .sidebar .collapse .nav-link {
      font-weight: 500;
      font-size: 0.9rem;
      padding-left: 12px;
      color: #656d87;
      border-radius: 8px;
      margin-bottom: 4px;
    }

    .sidebar .collapse .nav-link:hover,
    .sidebar .collapse .nav-link:focus {
      background-color: #e9ecef;
      color: #5e72e4;
    }

    /* Scrollbar styling for sidebar */
    .sidebar::-webkit-scrollbar {
      width: 6px;
    }
    .sidebar::-webkit-scrollbar-thumb {
      background-color: rgba(94, 114, 228, 0.4);
      border-radius: 3px;
    }
    .sidebar::-webkit-scrollbar-track {
      background: transparent;
    }

    /* Icon styles */
    .bi {
      font-size: 1.2rem;
      line-height: 1;
      flex-shrink: 0;
    }

    /* Responsive adjustments */
    @media (max-width: 767.98px) {
      .sidebar {
        max-width: 100%;
        height: auto;
        border-right: none;
        margin-top: 0;
        padding: 16px 12px;
      }
    }
  </style>
</head>
<body>
  <nav class="sidebar" aria-label="Sidebar navigation">
    <ul class="nav flex-column" role="menu" id="sidebarAccordion">
      <li class="nav-item" role="none">
        <a class="nav-link active" href="/dashboardMenu" role="menuitem">
          <i class="bi bi-grid-fill"></i>Doctor Dashboard
        </a>
      </li>

      <!-- Appointments -->
      <li class="nav-item" role="none">
        <a class="nav-link d-flex justify-content-between align-items-center"
           data-bs-toggle="collapse"
           href="#appointmentsMenu"
           role="button"
           aria-expanded="false"
           aria-controls="appointmentsMenu">
          <span><i class="bi bi-calendar-check"></i>Appointment</span>
          <i class="bi bi-chevron-down small"></i>
        </a>
        <div class="collapse" id="appointmentsMenu" data-bs-parent="#sidebarAccordion">
          <ul class="nav flex-column">
            <li><a class="nav-link" href="#">Add Appointment</a></li>
            <li><a class="nav-link" href="#">View Appointments</a></li>
            <li><a class="nav-link" href="#">Edit Appointment</a></li>
          </ul>
        </div>
      </li>

      <!-- Patients -->
      <li class="nav-item" role="none">
        <a class="nav-link d-flex justify-content-between align-items-center"
           data-bs-toggle="collapse"
           href="#patientsMenu"
           role="button"
           aria-expanded="false"
           aria-controls="patientsMenu">
          <span><i class="bi bi-people-fill"></i> Patients</span>
          <i class="bi bi-chevron-down small"></i>
        </a>
        <div class="collapse" id="patientsMenu" data-bs-parent="#sidebarAccordion">
          <ul class="nav flex-column">
            <li><a class="nav-link" href="#">Add Patient</a></li>
            <li><a class="nav-link" href="#">View Patients</a></li>
            <li><a class="nav-link" href="#">Patient Details</a></li>
            <li><a class="nav-link" href="#">Edit Patient</a></li>
          </ul>
        </div>
      </li>

      <!-- Doctors / Nurses -->
      <li class="nav-item" role="none">
        <a class="nav-link d-flex justify-content-between align-items-center"
           data-bs-toggle="collapse"
           href="#doctorsMenu"
           role="button"
           aria-expanded="false"
           aria-controls="doctorsMenu">
          <span><i class="bi bi-person-plus-fill"></i> Nurses</span>
          <i class="bi bi-chevron-down small"></i>
        </a>
        <div class="collapse" id="doctorsMenu" data-bs-parent="#sidebarAccordion">
          <ul class="nav flex-column">
            <li><a class="nav-link" href="#">Add Doctor/Nurse</a></li>
            <li><a class="nav-link" href="#">View Doctors/Nurses</a></li>
            <li><a class="nav-link" href="#">Edit Doctor/Nurse</a></li>
          </ul>
        </div>
      </li>

      <!-- Static Links -->
      <li class="nav-item"><a class="nav-link" href="#"><i class="bi bi-cash-stack"></i> Finance</a></li>
      <li class="nav-item"><a class="nav-link" href="#"><i class="bi bi-activity"></i> Monitor</a></li>
      <li class="nav-item"><a class="nav-link" href="#"><i class="bi bi-person-circle"></i> Profile</a></li>
      <li class="nav-item"><a class="nav-link" href="#"><i class="bi bi-gear-fill"></i> Settings</a></li>
    </ul>
  </nav>

  <!-- Bootstrap Bundle JS with Popper -->
  <script 
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" 
    integrity="sha384-QF0pm8bWgr7HXp+Wq+UPF9a8mwQRk91HtT9VG8JPLoyXJfPd9Vy9td1oLNw+dz/6" 
    crossorigin="anonymous"
  ></script>
  <script>
    // Collapse patients menu on submenu link click
    document.querySelectorAll('#patientsMenu .nav-link').forEach(function(link) {
      link.addEventListener('click', function () {
        const collapseElement = document.getElementById('patientsMenu');
        const bsCollapse = bootstrap.Collapse.getInstance(collapseElement);
        if (bsCollapse && collapseElement.classList.contains('show')) {
          bsCollapse.hide();
        }
      });
    });

    // Collapse appointments menu on submenu link click
    document.querySelectorAll('#appointmentsMenu .nav-link').forEach(function(link) {
      link.addEventListener('click', function () {
        const collapseElement = document.getElementById('appointmentsMenu');
        const bsCollapse = bootstrap.Collapse.getInstance(collapseElement);
        if (bsCollapse && collapseElement.classList.contains('show')) {
          bsCollapse.hide();
        }
      });
    });

    // Collapse doctors menu on submenu link click
    document.querySelectorAll('#doctorsMenu .nav-link').forEach(function(link) {
      link.addEventListener('click', function () {
        const collapseElement = document.getElementById('doctorsMenu');
        const bsCollapse = bootstrap.Collapse.getInstance(collapseElement);
        if (bsCollapse && collapseElement.classList.contains('show')) {
          bsCollapse.hide();
        }
      });
    });
  </script>
</body>
</html>

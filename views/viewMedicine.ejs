<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>View Medicines</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f0f8ff;
    }
    .container {
      margin-top: 50px;
    }
    .table thead {
      background-color: #0d6efd;
      color: white;
    }
    .page-title {
      text-align: center;
      margin-bottom: 25px;
      color: #2c3e50;
      font-weight: bold;
    }
  </style>
</head>
<body>

  <div class="container">
    <h2 class="page-title">View Medicines Given to Patients</h2>

    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th>Patient ID</th>
          <th>Patient Name</th>
          <th>Medicine Name</th>
          <th>Price (â‚¹)</th>
        </tr>
      </thead>
      <tbody>
        <% medicines.forEach(med => { %>
          <tr>
            <td><%= med.patient_id %></td>
            <td><%= med.patient_name %></td>
            <td><%= med.medicine_name %></td>
            <td><%= med.price_medicine %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

</body>
</html>
